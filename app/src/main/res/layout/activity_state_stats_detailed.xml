<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/stats_parent"
    android:layout_height="match_parent"
    tools:context=".StateStatsDetailed">

    <TextView
        android:id="@+id/statenameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StateStatsDetailed"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statenameView"
        android:id="@+id/stats_viewgroup"
        android:orientation="vertical">

    <TextView
        android:id="@+id/stateStatsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/statenameView"
        android:textSize="25sp"
        android:text="Loading..." />

    </LinearLayout>
</RelativeLayout>